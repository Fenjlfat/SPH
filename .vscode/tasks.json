{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-g",
                "-I${workspaceFolder}/include",
                "${workspaceFolder}/MOVE.cpp",
                "${workspaceFolder}/SPH.cpp",
                "-o",
                "${workspaceFolder}/program.out",
                "&&",
                "gnome-terminal --",
                "${workspaceFolder}/program.out",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Компиляция проекта с помощью g++"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "${workspaceFolder}/program.out",
            "group": "test",
            "dependsOn": "build",
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "${workspaceFolder}/build"
            ],
            "group": "build",
            "problemMatcher": []
        }
    ]
}